extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")


block content
    main
        if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            .card__image 
                                img(src="https://cdn.pixabay.com/photo/2022/07/20/18/44/reading-7334749_1280.png", alt="", height="300px", width="300px")
                            .card__content
                                h2.product__class $19.99
                                p.product__description A very interesting book
                            .card__actions
                                button.btn Add to Cart
        else 
            h1 No products


