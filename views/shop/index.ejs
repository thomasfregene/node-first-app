<%- include('../shared/head.ejs')%>
    <link rel="stylesheet" href="/css/product.css">
    <style>
       
    </style>
</head>
<body>
    <%- include('../shared/navigation.ejs')%>
    <main>
        <% if(prods.length > 0) { %>
            <div class="grid">
                <% for(let product of prods) {%>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>

                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>", alt="<%= product.title %>", height="300px", width="300px">
                        </div>
                        <div class="card__content">
                            <h2 class="product__class">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <%- include('../shared/add-to-cart.ejs', {product: product}) %>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else{ %>
            <h1>No Product Found!</h1>
        <% } %>
    </main>
    <%- include('../shared/end.ejs')%>